<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

    <com.amap.api.maps2d.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/center_mark"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/search_center_ic"
        android:layout_gravity="center"/>
    <View
        android:id="@+id/search_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE"
        android:visibility="gone"/>

    <!--<org.zarroboogs.maps.widget.StatusBarView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="#4C000000"/>-->

    <RelativeLayout
        android:id="@+id/top_action"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:id="@+id/search_maps_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/new_card">

            <ImageButton
                android:id="@+id/left_drawer_switch"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_margin="2dp"
                android:background="@drawable/button_background_selector"
                android:src="@mipmap/ic_qu_menu_grabber"/>


            <ImageButton
                android:id="@+id/cancel_search"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="2dp"
                android:background="@drawable/button_background_selector"
                android:src="@mipmap/ic_qu_search"
                tools:ignore="ContentDescription,RtlHardcoded"/>

            <!--<EditText-->
                <!--android:id="@+id/poi_search_in_maps"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:layout_marginLeft="5.0dip"-->
                <!--android:layout_marginRight="5.0dip"-->
                <!--android:layout_toLeftOf="@+id/cancel_search"-->
                <!--android:layout_toRightOf="@+id/left_drawer_switch"-->
                <!--android:background="@android:color/transparent"-->
                <!--android:completionThreshold="1"-->
                <!--android:cursorVisible="true"-->
                <!--android:focusable="true"-->
                <!--android:focusableInTouchMode="true"-->
                <!--android:textCursorDrawable="@null"-->
                <!--android:dropDownVerticalOffset="1.0dip"-->
                <!--android:hint="请输入关键字"-->
                <!--android:imeOptions="actionSearch|flagNoExtractUi"-->
                <!--android:inputType="text|textAutoComplete"-->
                <!--android:maxHeight="50dp"-->
                <!--android:maxLength="20"-->
                <!--android:minHeight="50dp"-->
                <!--android:singleLine="true"-->
                <!--android:textColor="#000000"-->
                <!--android:textSize="16.0sp"-->
                <!--android:visibility="gone"/>-->
            <com.room.mokeys.ui.MClearEditText
                android:id="@+id/poi_search_in_maps"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:cursorVisible="true"
                android:textCursorDrawable='@null'
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="text|textAutoComplete"
                android:hint="请输入关键字"
                android:layout_toLeftOf="@+id/cancel_search"
                android:layout_toRightOf="@+id/left_drawer_switch"
                android:background="@android:color/transparent"
                android:maxLength="11"
                android:paddingLeft="16dip"
                android:numeric="integer"
                android:textColor="#000000"
                android:textSize="16sp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/cancel_search"
                android:layout_toRightOf="@+id/left_drawer_switch"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:maxHeight="50dp"
                android:maxLength="20"
                android:minHeight="50dp"
                android:textColor="#000000"
                android:text="mokeys 摩客钥匙"
                android:textSize="16.0sp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tip_notlogin"
            android:layout_width="match_parent"
            android:layout_below="@+id/search_maps_bar"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@color/red"
            android:gravity="center"
            android:visibility="gone"
            android:text="请先登录"/>
        <TextView
            android:id="@+id/tip_reserves"
            android:layout_width="match_parent"
            android:layout_below="@+id/tip_notlogin"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@color/red"
            android:gravity="center"
            android:visibility="gone"
            android:text="您有一个正在预定的房源"/>
        <TextView
            android:id="@+id/tip_contract"
            android:layout_width="match_parent"
            android:layout_below="@+id/tip_reserves"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@color/red"
            android:gravity="center"
            android:visibility="gone"
            android:text="您有一个未签约的房源"/>
        <ListView
            android:id="@+id/search_result_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/search_maps_bar"
            android:layout_alignStart="@+id/search_maps_bar"
            android:layout_below="@+id/search_maps_bar"
            android:background="@drawable/new_card"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone">

        </ListView>

        <RelativeLayout
            android:id="@+id/search_float_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone">


            <RelativeLayout
                android:id="@+id/search_float_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/new_card">

                <TextView
                    android:id="@+id/search_result_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:text="摩托罗拉大厦"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/search_poi_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/search_result_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:text="地址，具体地址"/>

                <TextView
                    android:id="@+id/search_poi_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/search_poi_summary"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"/>

            </RelativeLayout>

            <ImageButton
                android:id="@+id/maps_drive_line_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/search_float_content"
                android:layout_marginTop="-25dp"
                android:background="@drawable/circle_button_with_shadow"
                android:src="@mipmap/ic_qu_map"
                tools:ignore="RtlHardcoded"/>

        </RelativeLayout>


        <ImageButton
            android:id="@+id/ori_compass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/search_maps_bar"
            android:layout_marginRight="36px"
            android:layout_marginTop="18px"
            android:visibility="gone"
            android:background="@android:color/transparent"
            android:src="@mipmap/maps_dav_compass_needle_large"/>


        <ImageButton
            android:id="@+id/my_location_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/circle_button_with_shadow"
            android:src="@mipmap/ic_qu_direction_mylocation"/>

        <ImageButton
            android:id="@+id/my_location_refresh"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="70dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/circle_button_with_shadow"
            android:src="@mipmap/map_refresh_btn_arrow"/>
        <ImageButton
            android:id="@+id/map_custom"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circle_button_with_shadow"
            android:src="@mipmap/customer_avatar"/>
    </RelativeLayout>
<LinearLayout
    android:id="@+id/scan_lin"
    android:layout_width="160dp"
    android:layout_height="40dp"
    android:paddingLeft="10dp"
    android:layout_gravity="bottom|center_horizontal"
    android:layout_marginBottom="20dp"
    android:background="@drawable/button_scan_shape_background"
    >
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/report_issue_scan_qrcode"
        android:layout_marginRight="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:text="扫码开门"/>
</LinearLayout>

</FrameLayout>