<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.room.mokeys.widget.CustomTitleView
        android:id="@+id/phone_login_custom_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:customTitleText="看房结果"
        app:customTitleRightimage="false">
    </com.room.mokeys.widget.CustomTitleView>

    <TextView
        android:id="@+id/pay_room_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="您正在看金隅汇景苑二区7号楼2单元2404"
        />
    <TextView
        android:id="@+id/pay_room_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="6dp"
        android:text="总共支付2元\n优惠券支付1元"
        />
    <Button
        android:id="@+id/pay_room_notexciting"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:background="@drawable/button_scan_shape_background"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="不感兴趣"/>
    <Button
        android:id="@+id/pay_room_pay"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:background="@drawable/button_scan_shape_background"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="去交定金"/>
    <Button
        android:id="@+id/pay_room_sign"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:background="@drawable/button_scan_shape_background"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="去签约"/>
</LinearLayout>
