<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">
    <com.room.mokeys.widget.CustomTitleView
        android:id="@+id/reserver_room_custom_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:customTitleText="我的预定"
        app:customTitleRightimage="false">
    </com.room.mokeys.widget.CustomTitleView>
    <cn.droidlover.xrecyclerview.XRecyclerContentLayout
        android:id="@+id/reserver_room_detail_contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:recyclerBackgroundColor="#f2f2f2"
        android:visibility="visible"
        />
        <!--app:layout_behavior="@string/appbar_scrolling_view_behavior"-->
        <!--app:recyclerScrollbarNone="true"-->
        <!--app:recyclerScrollbarStyle="outsideOverlay"-->

    <RelativeLayout
        android:id="@+id/hourse_lin"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        >
    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_scan_shape_background"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:gravity="center"
            android:text="去看房"/>
    </LinearLayout>
    </RelativeLayout>
</LinearLayout>
