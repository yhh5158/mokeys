<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.room.mokeys.widget.CustomTitleView
        android:id="@+id/phone_login_custom_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:customTitleText="已支付定金"
        app:customTitleRightimage="false">
    </com.room.mokeys.widget.CustomTitleView>

    <TextView
        android:id="@+id/reserves_room_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="您支付定金的房源是金隅汇景苑二区7号楼2单元2404"
        />
    <TextView
        android:id="@+id/reserves_room_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="6dp"
        android:text="请于2017-7-24 10：00前去签约"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="6dp"
        android:text="@string/reserves_tip"
        />
    <Button
    android:id="@+id/reseves_finish"
    android:layout_width="120dp"
    android:layout_height="30dp"
    android:layout_marginTop="30dp"
    android:textColor="@color/white"
    android:background="@drawable/button_scan_shape_background"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:text="确定"/>
    <Button
        android:id="@+id/reseves_sign"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:background="@drawable/button_scan_shape_background"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="去签约"/>
</LinearLayout>
