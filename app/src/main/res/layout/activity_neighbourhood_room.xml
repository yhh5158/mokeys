<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="#f2f2f2"
    android:orientation="vertical">
    <com.room.mokeys.widget.CustomTitleView
        android:id="@+id/neighbourhood_room_detail_custom_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:customTitleText="房子详情"
        app:customTitleRightimage="false">
    </com.room.mokeys.widget.CustomTitleView>
    <cn.droidlover.xrecyclerview.XRecyclerContentLayout
        android:id="@+id/neighbourhood_room_detail_contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:recyclerBackgroundColor="#f2f2f2"
        />
        <!--app:layout_behavior="@string/appbar_scrolling_view_behavior"-->
        <!--app:recyclerScrollbarNone="true"-->
        <!--app:recyclerScrollbarStyle="outsideOverlay"-->


</LinearLayout>
